  "require-dev": {
    "codeception/codeception": "*",
    "symfony/var-dumper": "*",
    "phpstan/phpstan": "*"
  },
  "require": {
    "php": ">=7.1.0",
    "xervice/core": "^4.0.0"
  },
  "autoload": {
    "psr-0": {
      "Xervice\\": "src/"
